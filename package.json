{
  "name": "playwright-learning",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "PWDEBUG=1 playwright test",
    "report": "playwright show-report",
    "e2e": "playwright test -g @e2e",
    "a11y": "playwright test -g @a11y --project=chromium",
    "visual": "playwright test -g @visual",
    "format": "npx prettier -w .",
    "auth:gen": "node src/fixtures/generateAuthState.js",
    "test:auth": "playwright test -g @auth",
    "docker:build": "docker build -t pw-portfolio .",
    "docker:test": "docker run --rm -v \"$PWD/playwright-report:/app/playwright-report\" pw-portfolio",
    "ct": "playwright test -c playwright-ct.config.ts",
    "ct:ui": "playwright test -c playwright-ct.config.ts --ui"
  },
